
@using SilverNeedle.Characters;
@using SilverNeedle.Utility;
@using SilverNeedle.Treasure;
@{
    var character = (CharacterSheetTextView)ViewData["Character"];
    var charFull = (CharacterSheet)ViewData["characterFull"];
    var coinPurse = (CoinPurse)charFull.Inventory.CoinPurse;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Money</h3>
    </div>
    <div class="panel-table">
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                <td>Platinum</td>
                <td>@coinPurse.Platinum.Pieces</td>
                </tr>
                <tr>
                <td>Gold</td>
                <td>@coinPurse.Gold.Pieces</td>
                </tr>
                <tr>
                <td>Silver</td>
                <td>@coinPurse.Silver.Pieces</td>
                </tr>
                <tr>
                <td>Copper</td>
                <td>@coinPurse.Copper.Pieces</td>
                </tr>
            </tbody>

        </table>
    </div>
</div>