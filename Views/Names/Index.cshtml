@{
    ViewData["Title"] = "Name Generator";
    var names = (System.Collections.Generic.List<silverneedleweb.Controllers.NamesController.NamesViewModel>)ViewData["names"];
    var lastRace = "";
}
<div class="container-fluid">
<h1>Names</h1>
 <a asp-area="" asp-controller="Names" asp-action="Index" class="btn btn-lg btn-primary pull-right" role="button">Regenerate</a>

@foreach(var category in names){
    @if(lastRace != category.Race) 
    { 
      lastRace=category.Race;
      <div class="col-md-12"><h3 style="border-bottom: 1px solid gray;">@category.Race</h3></div> 
    }
    <div class="col-md-6">
      <h4>@category.Gender</h4>
      @foreach(var n in category.Names)
      {
        <div style="padding-left: 15px;">@n</div>
      }      
    </div>
}
</div>