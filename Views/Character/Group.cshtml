@{
    ViewData["Title"] = "Group Generator";
    var strategies = (string[])ViewData["Strategies"];
}
<h1>Generate Group NPC</h1>
This will generate a village, inn, or other group of NPC's.
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Character" asp-action="CharacterGroup" method="POST">
            <fieldset class="form-group">
                <legend>Character Options</legend>
                <div class="form-group">
                    <label for="strategy">Type</label>
                    <select name="strategy" id="strategy" class="form-control">
                        @foreach(var s in strategies)
                        {
                            <option>@s</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="number">Number of Characters</label>
                    <input type="text" value="1" name="number" id="number" class="form-control" />
                </div>
            </fieldset>
            <input type="submit" value="Create Characters" class="btn btn-primary" />
        </form>
    </div>
</div>
